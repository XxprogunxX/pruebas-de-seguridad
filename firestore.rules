rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* USUARIOS */
    match /usuarios/{userId} {
      // Lectura pública (necesario para login sin Firebase Auth)
      allow read: if true;

      // Crear usuario con validación básica
      allow create: if request.resource.data.email is string &&
                       request.resource.data.password is string &&
                       request.resource.data.nombre is string &&
                       request.resource.data.nombre.size() >= 2 &&
                       request.resource.data.nombre.size() <= 50 &&
                       request.resource.data.rol == "usuario";

      // No permitir update/delete desde cliente
      allow update, delete: if false;
    }

    /* ARTÍCULOS */
    match /articulos/{articuloId} {
      // Lectura pública
      allow read: if true;

      // Crear artículo con validación
      allow create: if request.resource.data.nombre is string &&
                       request.resource.data.nombre.size() >= 3 &&
                       request.resource.data.nombre.size() <= 100 &&
                       request.resource.data.precio is number &&
                       request.resource.data.precio >= 0 &&
                       request.resource.data.userId is string;

      // Permitir update/delete (la app valida propiedad en frontend)
      allow update, delete: if true;
    }

    /* BLOQUEO GLOBAL */
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
