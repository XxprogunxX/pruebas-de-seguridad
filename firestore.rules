rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función helper para verificar si el usuario está autenticado
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Función helper para verificar si el usuario es admin
    function isAdmin() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'admin';
    }
    
    // Función helper para verificar si es el propietario del documento
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Reglas para la colección de usuarios
    match /usuarios/{userId} {
      // Permitir lectura solo para usuarios autenticados
      allow read: if isSignedIn();
      
      // Permitir creación de nuevos usuarios (para registro)
      // NOTA: En producción, considera usar Cloud Functions para crear usuarios
      allow create: if request.resource.data.rol == 'usuario' &&
                       request.resource.data.email is string &&
                       request.resource.data.password is string &&
                       request.resource.data.nombre is string;
      
      // Solo admins pueden actualizar usuarios
      allow update: if isAdmin();
      
      // Solo admins pueden eliminar usuarios
      allow delete: if isAdmin();
    }
    
    // Reglas para la colección de artículos
    match /articulos/{articuloId} {
      // Cualquiera puede leer artículos (público)
      allow read: if true;
      
      // Solo usuarios autenticados pueden crear artículos
      allow create: if isSignedIn() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.nombre is string &&
                       request.resource.data.precio is number &&
                       request.resource.data.precio >= 0;
      
      // Solo el propietario o admin pueden actualizar
      allow update: if isOwner(resource.data.userId) || isAdmin();
      
      // Solo el propietario o admin pueden eliminar
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Bloquear acceso a cualquier otra colección
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
